<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_medium"
    android:paddingTop="@dimen/padding_medium">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/event_entry_icon"
        android:layout_height="@dimen/event_entry_icon"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginStart="@dimen/padding_large"
        android:contentDescription="@string/cd_event_description"
        android:src="@drawable/ic_description_black_24dp"
        android:tint="@color/primary_dark_50"/>

    <TextView
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginStart="@dimen/padding_large"
        android:layout_weight="1"
        android:autoLink="web"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small"
        tools:text="@string/lorem_long"/>

</LinearLayout>